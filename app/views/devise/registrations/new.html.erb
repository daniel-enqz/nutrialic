<div class="container">
<h1>Regístrate</h1>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
  data: {turbo: false}) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">

              <%# NEW INPUTS  %>
    <%= f.input :name, label: "Nombre(s):",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>

    <%= f.input :lastname, label: "Apellidos:",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "lastname" }%>

    <%= f.input :phone,  label: "Telefóno:",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "phone" }%>

<%# OLD INPUTS %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password, label: "Contraseña:",
                required: true,
                hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: "Confirmar contraseña:",
                required: true,
                hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>


  </div>

  <div class="btn btn-flat">
    <%= f.button :submit, "Sign up" %>
  </div>

<% end %>


<%= render "devise/shared/links" %>

</div>
